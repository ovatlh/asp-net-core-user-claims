@model aspApp.Models.Rol
@inject aspApp.Services.fkLists sfklists
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rol - Edit</h2>

<div class="content">
    <form action="~/Rol/Edit" method="post">
        <input type="text" asp-for="Id" readonly />
        <input type="text" asp-for="Name" placeholder="Rol" />

        <select asp-for="IdStartPage"
                asp-items="@(new SelectList(sfklists.GetStartpages_List(), "Id", "Name", ViewBag.IdStartPage))">
            <option value="0">Select StartPage</option>
        </select>

        <input type="submit" value="Save" />
        <a href="~/Rol">Cancel</a>
    </form>
</div>