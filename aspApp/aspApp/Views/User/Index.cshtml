@model IEnumerable<aspApp.Models.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int x = 1;
}

<h2>User - Index</h2>
<a href="~/User/Add" class="a-action">Add</a>

<div class="content">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>Username</th>
                <th>Password</th>
                <th>Rol</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@x</td>
                    <td>@item.Id</td>
                    <td>@item.Username</td>
                    <td>@item.Password</td>
                    <td>@item.IdRolNavigation.Name</td>
                    <td><a href="~/User/Edit/@item.Id">Edit</a></td>
                    <td><a href="~/User/Delete/@item.Id">Delete</a></td>
                </tr>
                x++;
            }
        </tbody>
    </table>
</div>