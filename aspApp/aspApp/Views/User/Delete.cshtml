@model aspApp.Models.User
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User - Delete</h2>

<div class="content">
    <form action="~/User/Delete" method="post">
        <input type="text" asp-for="Id" readonly />
        <input type="text" asp-for="Username" placeholder="Username" readonly />
        <input type="text" asp-for="Password" placeholder="Password" readonly />
        <input type="text" asp-for="Name" placeholder="Name" />
        <input type="text" asp-for="IdRol" readonly />
        <input type="text" asp-for="IdRolNavigation" readonly />
        <input type="text" asp-for="IdRolNavigation.Id" readonly />
        <input type="text" asp-for="IdRolNavigation.Name" placeholder="Rol" readonly />
        <input type="submit" value="Delete" />
        <a href="~/User">Cancel</a>
    </form>
</div>