@model aspApp.Models.Claims
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Claims - Delete</h2>

<div class="content">
    <form action="~/Claims/Delete" method="post">
        <input type="text" asp-for="Id" readonly />
        <input type="text" asp-for="DisplayName" placeholder="Display name" readonly />
        <input type="text" asp-for="Content" placeholder="Content" readonly />
        <input type="submit" value="Delete" />
        <a href="~/Claims">Cancel</a>
    </form>
</div>